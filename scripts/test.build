#!/bin/sh -e

usage() {
  echo "OVERVIEW: Build all workspace packages in order of dependencies."
  exit
}

if [ "$1" = '-h' ] || [ "$1" = '--help' ]; then
  usage
fi

(
  PROJECT_ROOT="$(cd $(dirname $0)/..; pwd)"

  cd $PROJECT_ROOT
  echo "[BOOTSTRAP]: Installing workspace dependencies"
  yarn install
  echo "[BOOTSTRAP]: Compiling packages..."
  yarn workspace api-client build-test
  echo "[BOOTSTRAP]: Built 'api-client' package (for testing)."
  yarn workspace utils build-test
  echo "[BOOTSTRAP]: Built 'utils' package (for testing)."
  yarn workspace parsers build-test
  echo "[BOOTSTRAP]: Built 'parsers' package (for testing)."
  yarn workspace ui build-test
  echo "[BOOTSTRAP]: Built 'ui' package (for testing)."
)