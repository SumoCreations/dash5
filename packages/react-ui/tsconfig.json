{
  "compilerOptions": {
    "target": "ES5",
    "lib": [
      "es2020",
      "dom"
    ],
    "module": "esnext",
    "declaration": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "strict": true,
    "types": [
      "jest"
    ],
    "jsx": "react",
    "moduleResolution": "node",
    "allowJs": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "downlevelIteration": true,
    "noEmit": false,
    "baseUrl": "../",
    "paths": {
      "@mbari/utils": [
        "utils/src/*"
      ],
      "@mbari/utils/*": [
        "utils/src/*"
      ]
    }
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "__tests__",
    "**/__tests__/*",
    "**/*.test.*",
    "lib",
    "src/stories/**"
  ]
}