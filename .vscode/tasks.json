{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "[react-ui]: Storybook",
      "type": "shell",
      "command": "yarn workspace @mbari/react-ui start",
      "presentation": {
        "reveal": "always",
        "panel": "new",
        "group": "develop"
      },
      "runOptions": { "runOn": "folderOpen" },
      "options": {
        "statusbar": {
          "label": "$(remote-explorer-documentation) Storybook"
        }
      }
    },
    {
      "label": "[react-ui]: Tailwind",
      "type": "shell",
      "command": "yarn workspace @mbari/react-ui tailwind",
      "presentation": {
        "reveal": "always",
        "panel": "new",
        "group": "develop"
      },
      "runOptions": { "runOn": "folderOpen" },
      "options": {
        "statusbar": {
          "label": "$(server-process) Tailwind"
        }
      }
    },
    {
      "label": "[react-ui]: Tests",
      "type": "shell",
      "command": "yarn workspace @mbari/react-ui test:watch",
      "presentation": {
        "reveal": "always",
        "panel": "new",
        "group": "develop"
      },
      "runOptions": { "runOn": "folderOpen" },
      "options": {
        "statusbar": {
          "label": "$(test-view-icon) Test"
        }
      }
    },
    {
      "label": "[project]: Lint",
      "type": "shell",
      "command": "yarn esw",
      "presentation": {
        "reveal": "always",
        "panel": "new",
        "group": "root"
      },
      "options": {
        "statusbar": {
          "label": "$(test-view-icon) Lint"
        }
      }
    }
  ]
}
